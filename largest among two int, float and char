/*
*function template
*largest among two int, two floats and ascii of two characters*/
#include<iostream>
using namespace std;
template <class T>
void greatest(T x, T y){
	if (x>y){
		cout<<x<<" is greater than "<<y<<endl;
	}
	else cout<<y<<" is greater than "<<x<<endl;
}
int main()
{
	int i1,i2;
	float f1,f2;
	char c1[2],c2[2];
	cout<<"Enter two different integer numbers:";
	cin>>i1>>i2;
	greatest(i1,i2);
	cout<<"Enter two different float numbers:";
	cin>>f1>>f2;
	greatest(f1,f2);
	cout<<"Enter two diffrent characters:";
	cin>>c1[2]>>c2[2];
	greatest(c1[2],c2[2]);
 return 0;
}
